<% if @comment.destroyed? %>

  $( '#comment-' +<%= @comment.id %> ).fadeOut( "slow" );
  $( '.js-comments-count' ).html( "<%= @comment.user.comments.count %> Comments" );

<% else %>

  $( '#comment-' +<%= @comment.id %> ).prepend( "<div class='alert alert-error'><%= flash[ :error ] %></div>" );

<% end %>
